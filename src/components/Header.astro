<script is:inline>
	const fadeOut = () => {
		const loaderWrapper = document.querySelector('.load_wrapper')
		loaderWrapper.classList.add('fade')
	}

	window.addEventListener('load', fadeOut)
	window.onscroll = () => {
		if (window.scrollY > 80) {
			header.style.backgroundColor = '#0e0e0e'
		}
		if (window.scrollY < 80) {
			header.style.backgroundColor = 'transparent'
		}
	}

	document.getElementById('boton').addEventListener('click', () => {
		document.querySelector('#menu').classList.toggle('hidden')
	})
	document.getElementById('sobrenosotros').addEventListener('click', () => {
		window.scroll(0, 820)
		document.querySelector('#menu').classList.toggle('hidden')
	})
	document.getElementById('contacto').addEventListener('click', () => {
		window.scroll(0, 1500)
		document.querySelector('#menu').classList.toggle('hidden')
	})
</script>

<style>
	.load_wrapper {
		transition: opacity 0.25s, visibility 1s, z-index 2s;
	}
	.loader {
		width: 60px;
		height: 60px;
		border-radius: 50%;
		animation: spin 1.2s linear infinite;
	}
	.loader::after,
	.loader::before {
		content: '';
		position: absolute;
		border-radius: inherit;
	}

	.loader::before {
		width: 100%;
		height: 100%;
		background: linear-gradient(0deg, rgb(162, 105, 0), rgb(255, 236, 33));
	}

	.loader::after {
		width: 85%;
		height: 85%;
		background-color: #0e0e0e;
		top: 50%;
		left: 50%;
		transform: translate(-50%, -50%);
	}

	@keyframes spin {
		to {
			transform: rotate(360deg);
		}
	}

	.fade {
		opacity: 0;
		visibility: hidden;
		z-index: -100;
	}
	svg {
		fill: aliceblue;
	}

	header {
		top: 0;
	}
	@media (max-width: 1024px) {
		#menu > ul {
			width: 92vw;
			padding-bottom: 1rem;
			background-color: #0e0e0e;
		}
	}
</style>
