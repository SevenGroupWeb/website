---
export interface Props {
	title: string
	body: string
	href: string
}

const { href, title, body } = Astro.props
---

<script is:inline>
	const fadeOut = () => {
		const loaderWrapper = document.querySelector('.load_wrapper')
		loaderWrapper.classList.add('fade')
	}
	
	window.addEventListener('load', fadeOut)
	window.onscroll = () => {
		if (window.scrollY > 100) {
			header.style.backgroundColor = '#0e0e0e'
		}
		if (window.scrollY < 100) {
			header.style.backgroundColor = 'transparent'
		}
	}
</script>
<div
	class='load_wrapper absolute top-0 left-0 bottom-0 right-0 h-screen w-screen z-20 bg-[#0e0e0e] grid place-items-center'>

	<div class='loader'></div>
</div>

<header id='header' class='sticky t-0 z-10 transition duration-150'>
	<div class='flex items-center justify-between lg:mx-32'>
		<a href='/' class='flex items-center'>
			<picture>
				<img src='/favicon.png' alt='Seven Group Logo' class='w-20' />
			</picture>
			<h2 class='hidden font-semibold md:block'>Seven Group</h2>
		</a>
		<ul class='flex gap-2 lg:gap-4 font-bold'>
			<li>
				<a
					class='p-3 hover:bg-[#161616] rounded'
					href='https://sevengroupcolombia.com.co'>Inicio</a>
			</li>
			<li>
				<a class='p-3 hover:bg-[#161616] rounded' href='#sobrenosotros'
					>Sobre nosotros</a
				>
			</li>
			<li>
				<a class='p-3 hover:bg-[#161616] rounded' href='#contacto'>Contacto</a>
			</li>
		</ul>
	</div>
</header>
<style>
	.load_wrapper {
		transition: opacity 0.25s, visibility 1s, z-index 2s;
	}
	.loader {
		width: 60px;
		height: 60px;
		border-radius: 50%;
		animation: spin 1.2s linear infinite;
	}
	.loader::after,
	.loader::before {
		content: '';
		position: absolute;
		border-radius: inherit;
	}

	.loader::before {
		width: 100%;
		height: 100%;
		background: linear-gradient(0deg, #f0c, #80f);
	}

	.loader::after {
		width: 85%;
		height: 85%;
		background-color: #0e0e0e;
		top: 50%;
		left: 50%;
		transform: translate(-50%, -50%);
	}

	@keyframes spin {
		to {
			transform: rotate(360deg);
		}
	}

	.fade {
		opacity: 0;
		visibility: hidden;
		z-index: -100;
	}

	header {
		top: 0;
	}
</style>
