---
export interface Props {
	title: string
	body: string
	href: string
}

const { href, title, body } = Astro.props
---

<div
	class='load_wrapper absolute top-0 left-0 bottom-0 right-0 h-screen w-screen z-20 bg-[#0e0e0e] grid place-items-center'
>
	<div class='loader'></div>
</div>

<header id='header' class='sticky t-0 z-10 transition duration-150'>
	<nav
		class='flex items-center justify-between flex-wrap bg-teal-500 px-6 py-2'
	>
		<div class='flex items-center flex-shrink-0 mr-6'>
			<a href='/' class='flex items-center'>
				<picture>
					<img src='/favicon.png' alt='Seven Group Logo' class='w-20 mr-2' />
				</picture>
				<h2 class='hidden font-medium md:block tracking-tight text-xl'>
					Seven Group
				</h2>
			</a>
		</div>

		<div id='menu' class='pb-2 lg:pb-0 lg:flex lg:items-center lg:w-auto'>
			
			<a
				href='https://sevengroupcolombia.com.co'
				class='cursor-pointer inline-block text-md px-4 py-3 transition mr-4 duration-200 leading-none border rounded mt-4 lg:mt-0 font-semibold hover:bg-[#161616]'
				>Inicio</a
			>
		</div>
	</nav>
</header>

<script is:inline>
	const fadeOut = () => {
		const loaderWrapper = document.querySelector('.load_wrapper')
		loaderWrapper.classList.add('fade')
	}

	window.addEventListener('load', fadeOut)
	window.onscroll = () => {
		if (window.scrollY > 20) {
			header.style.backgroundColor = '#0e0e0e'
		}
		if (window.scrollY < 20) {
			header.style.backgroundColor = 'transparent'
		}
	}

</script>

<style>
	.load_wrapper {
		transition: opacity 0.25s, visibility 1s, z-index 2s;
	}
	.loader {
		width: 60px;
		height: 60px;
		border-radius: 50%;
		animation: spin 1.2s linear infinite;
	}
	.loader::after,
	.loader::before {
		content: '';
		position: absolute;
		border-radius: inherit;
	}

	.loader::before {
		width: 100%;
		height: 100%;
		background: linear-gradient(0deg, rgb(162, 105, 0), rgb(255, 236, 33));
	}

	.loader::after {
		width: 85%;
		height: 85%;
		background-color: #0e0e0e;
		top: 50%;
		left: 50%;
		transform: translate(-50%, -50%);
	}

	@keyframes spin {
		to {
			transform: rotate(360deg);
		}
	}

	.fade {
		opacity: 0;
		visibility: hidden;
		z-index: -100;
	}
	svg {
		fill: aliceblue;
	}

	header {
		top: 0;
	}
</style>
