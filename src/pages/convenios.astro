---
import Layout from '../layouts/Layout.astro'
import Convenio from '../components/Convenio.astro'

---

<Layout title='Convenios | Seven Group Colombia' convenios={true}>
	<main class='container px-6 py-10 mx-auto'>
		<h1 class='text-3xl font-semibold mb-8 capitalize lg:text-4xl'>
			Nuestros convenios
		</h1>

		<div id='cards'>
			<Convenio
				img='/accesorios.png'
				nombre='Accesorios Isaamar'
				descripcion='Lorem ipsum dolor sit amet consectetur adipisicing elit. Esse maxime temporibus aut distinctio. Eos autem ab voluptate! '
				descuento='10'
				url='https://www.instagram.com/accesorios_isaamar/'
			/>
			<Convenio
				img='/valentin.jpg'
				nombre='Valentín'
				descripcion='Lorem ipsum dolor sit amet consectetur adipisicing elit. Esse maxime temporibus aut distinctio. Eos autem ab voluptate! '
				descuento='15'
				url='https://www.instagram.com/sevengroup_colombia/'
			/>
			<Convenio
				img='/vinodelacaza.jpg'
				nombre={`Vino D' La Caza`}
				descripcion='Lorem ipsum dolor sit amet consectetur adipisicing elit. Esse maxime temporibus aut distinctio. Eos autem ab voluptate! '
				descuento='5'
				url='https://www.instagram.com/sevengroup_colombia/'
			/>
			<Convenio
				img='/lenceria.jpg'
				nombre='Lencería Sanmy'
				descripcion='Lorem ipsum dolor sit amet consectetur adipisicing elit. Esse maxime temporibus aut distinctio. Eos autem ab voluptate! '
				descuento='7'
				url='https://www.instagram.com/sevengroup_colombia/'
			/>
		</div>
	</main>
</Layout>

<style>
	#cards {
		display: grid;
		gap: 1rem;
		grid-auto-flow: dense;
		/* grid-auto-rows: 22rem; */
		grid-template-columns: repeat(auto-fit, minmax(410px, 1fr));
	}
	@media(max-width: 500px){
		#cards{
			grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
		}
	}
</style>
